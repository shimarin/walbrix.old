setup()
{
case "${CATEGORY}/${PN}" in
	sys-process/cronie)
		getent group crontab || groupadd -g 125 crontab
		;;
	net-vpn/openvpn)
		getent group openvpn || groupadd -g 103 openvpn
		getent passwd openvpn || useradd -c "" -d /dev/null -M -u 103 -g openvpn -s /sbin/nologin openvpn
		;;
	net-analyzer/tcpdump)
		getent group tcpdump || groupadd -g 104 tcpdump
		getent passwd tcpdump || useradd -c "" -d /dev/null -M -u 104 -g tcpdump -s /sbin/nologin tcpdump
		;;
	net-analyzer/zabbix)
		getent group zabbix || groupadd -g 105 zabbix
		getent passwd zabbix || useradd -c "" -d /var/lib/zabbix/home -M -u 105 -g zabbix -s /sbin/nologin zabbix
		;;
	net-analyzer/snort)
		getent group snort || groupadd -g 106 snort
		getent passwd snort || useradd -c "" -d /dev/null -M -u 106 -g snort -s /sbin/nologin snort
		;;
	net-dns/dnsmasq)
		getent group dnsmasq || groupadd -g 109 dnsmasq
		getent passwd dnsmasq || useradd -c "" -d /dev/null -M -u 109 -g dnsmasq -s /sbin/nologin dnsmasq
		;;
	www-servers/nginx)
		getent group nginx || groupadd -g 110 nginx
		getent passwd nginx || useradd -c "" -d /var/lib/nginx -M -u 110 -g nginx -s /sbin/nologin nginx
		;;
	media-video/motion)
		getent passwd motion || useradd -c "" -d /var/lib/motion -M -u 115 -g video -s /sbin/nologin motion
		;;
	sci-geosciences/gpsd)
		getent passwd gpsd || useradd -c "" -d /dev/null -M -u 200 -g uucp -s /sbin/nologin gpsd
		;;
	mail-mta/ssmtp)
		getent group ssmtp || groupadd -g 207 ssmtp # exclusive with postfix
		;;
	*) : ;;
esac
}

if [ "$EBUILD_PHASE" == "setup" ]; then
        setup
fi
